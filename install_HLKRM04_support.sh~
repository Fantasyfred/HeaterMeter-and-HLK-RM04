#!/bin/sh

svn co -r39237 svn://svn.openwrt.org/openwrt/trunk ~/openwrt
cd ..
git clone https://github.com/CapnBry/HeaterMeter.git
cd ~/HLKRM04HM
cp ~/HLKRM04HM/HLKRM04_files/*.patch ~/HeaterMeter/openwrt/patches/.
cp ~/HLKRM04HM/HLKRM04_files/clear_spi ~/HeaterMeter/openwrt/patches/.
cp ~/HLKRM04HM/HLKRM04_files/config.HLKRM04 ~/HeaterMeter/openwrt/.
patch -N -p0 -d ~/HeaterMeter/openwrt/ < ~/HLKRM04HM/install.sh.patch
